[Unit]
Description=Kiln Guardian Controller
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/kiln-guardian
Environment=ENV_FILE=/home/pi/kiln-guardian/.env
ExecStart=/usr/bin/python3 -m kiln_guardian.app
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
